<h1> Create New Blogger <h1>

<% if flash[:blogger_errors] %>
  <% flash[:blogger_errors].each do |error| %>
    <p><%= error %><p>
  <% end %>
<% end %>

<%= form_for @blogger do |f| %>

  <%= f.label :name %>
  <%= f.text_field :name %>

  <%= f.label :age %>
  <%= f.number_field :age %>

  <%= f.label :bio %>
  <%= f.text_area :bio %>

  <%= f.submit %>

  <% end %>
